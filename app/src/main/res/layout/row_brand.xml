<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_default_8dp">

        <TextView
            android:id="@+id/txtBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:textColor="@android:color/black"
            android:textSize="@dimen/default_text_size_20" />

        <TextView
            android:id="@+id/txtBrandDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtBrandName"
            android:text="test test test test test"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/default_text_size_17" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="2017-10-05 11:11:59"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/default_text_size_13" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/black"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
